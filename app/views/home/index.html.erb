<h1>Home#index</h1>
<div class="ui grid relaxed">
  <div style={width:600px}>
    <h1>Appt</h1>
    <table class="ui celled table">
      <thead>
        <tr>
          <th>Doctor</th>
          <th>Patient</th>
          <th>Date</th>
          <th>Reason</th>
          <th>planned treatment</th>
        </tr>
      </thead>
      <tbody>
        <% @appointments.each do |appt|%>
          <tr>
            <td data-label="Name"><%= appt.doctor.name%></td>
            <td data-label="Age"><%= appt.patient.name %></td>
            <td data-label="Job"><%= appt.date %></td>
            <td data-label="Job"><%= appt.patient.condition %></td>
            <td data-label="Job"><%= appt.doctor.treatment %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="two column row">
    <div class="column segment j-box">
      <h1>Doctors</h1>
      <div class="ui middle aligned selection list">
        <% @doctors.each do |doctor|%>
          <div class="item">
            <img class="ui avatar image" src="https://cdn4.iconfinder.com/data/icons/avatars-xmas-giveaway/128/girl_female_woman_avatar-512.png">
            <div class="content">
              <div class="header"><%= doctor.name%></div>
              <%= doctor.specialty%>
              <br />
              <%= doctor.treatment%>
            </div>
          </div>
        <% end%>
      </div>
    </div>
    <div class="column  segment j-box">
      <h1>Patients</h1>
      <div class="ui middle aligned selection list">
        <% @patients.each do |patient|%>
          <div class="item">
            <img class="ui avatar image" src="https://cdn4.iconfinder.com/data/icons/avatars-xmas-giveaway/128/girl_female_woman_avatar-512.png">
            <div class="content">
              <div class="header"><%= patient.name%></div>
              <%= patient.condition%>
            </div>
          </div>
        <% end%>
      </div>
    </div>
  </div>
</div>
